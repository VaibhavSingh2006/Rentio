<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
<h3>Edit your listings!</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
      <div class="mb-3">
         <lable for="title" class="form-label">New title</lable>
         <input name="listing[title]" value="<%= listing.title%>" type="text" class="form-control" required>
         <div class="invalid-feedback"> Please, enter correct title!</div>
         <div class="valid-feedback">Looking good!</div>
      </div>
      <div class="mb-3">
         <lable for="description" class="form-label">New description</lable>
         <textarea name="listing[description]"type="text" class="form-control" required><%= listing.description%></textarea>
         <div class="invalid-feedback">Enter valid description!</div>
         <div class="valid-feedback">Looking good!</div>
      </div>
      <div class="mb-3">
         <lable for="image" class="form-label">URL</lable>
         <input name="listing[image]" value="<%= listing.image%>" type="text" class="form-control" required>
         <div class="invalid-feedback">Enter valid link!</div>
         <div class="valid-feedback">Looking good!</div>
      </div>
      <div class="row">
         <div class="mb-3 col-md-4">
         <lable for="price" class="form-label">New price</lable>
         <input name="listing[price]" value="<%= listing.price%>" type="number" class="form-control" required>
         <div class="invalid-feedback">Enter correct price!</div>
         <div class="valid-feedback">Looking good!</div>
      </div>
      <div class="mb-3 col-md-8">
         <lable for="country" class="form-label">New Country</lable>
         <input name="listing[country]" value="<%= listing.country%>" class="form-control" required>
         <div class="invalid-feedback"> Enter correct country!</div>
         <div class="valid-feedback"> Looking good!</div>
      </div>
      </div>
      <div class="mb-3">
         <lable for="location" class="form-label">New location</lable>
         <input name="listing[location]" value="<%= listing.location%>" type="text" class="form-control" required>
         <div class="invalid-feedback">Enter correct location!</div>
         <div class="valid-feedback">Looking good!</div>
      </div>
       <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>