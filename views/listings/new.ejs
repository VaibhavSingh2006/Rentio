<%layout("/layouts/boilerplate")%>
<div class="row mt-3">
 <div class="col-8 offset-2">
  <h3>Create a new Listings!</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
          <div class="invalid-feedback"> Please, enter correct title!</div>
          <div class="valid-feedback">Looking good!</div>
        </div>
        <div class="mb-3">
          <lable for="description" class="form-label">Description</lable>
          <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control" required></textarea>
          <div class="invalid-feedback">Enter valid description!</div>
          <div class="valid-feedback">Looking good!</div>
        </div>
        <div class="mb-3">
          <lable for="image" class="form-label">URL</lable>
          <input name="listing[image]" placeholder="enrer image URL/Link" type="text" class="form-control">
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">price</lable>
          <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
          <div class="invalid-feedback"> Enter correct price!</div>
          <div class="valid-feedback"> Looking good!</div>
        </div>
         <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable> 
          <input name="listing[country]" placeholder="enter country Name" class="form-control" required>
          <div class="invalid-feedback">Enter correct country!</div>
          <div class="valid-feedback">Looking good!</div> 
        </div>
        </div>
        <div class="mb-3">
          <lable for="location" class="form-label">Location</lable>   
          <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required> 
          <div class="invalid-feedback">Enter proper location!</div>
          <div class="valid-feedback">Looking good!</div>
        </div>
       <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
   </div> 
</div>
